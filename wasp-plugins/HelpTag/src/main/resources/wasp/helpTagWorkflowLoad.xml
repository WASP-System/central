<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
  <bean id="helpTagWorkflowArea" class="java.lang.String">
  	<constructor-arg><value>helpTag</value></constructor-arg>
  </bean>
  
  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="helpTagUiFieldWrapper">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" value="#{helpTagWorkflowArea}" />
  </bean>


  <bean id="helpTagWorkflow" class="edu.yu.einstein.wasp.load.WorkflowLoader" depends-on="helpTagLibrarySampleSubtypeResource">
    <property name="area" value="#{helpTagWorkflowArea}" />
    <property name="domain" value="#{helpTagPluginDomain}" />
    <property name="name" value="HELP Tagging" />
    <property name="pageFlowOrder">
      <list>
		<value>/jobsubmit/modifymeta/{n}</value>
		<value>/jobsubmit/resource/mps/{n}</value>
		<value>/jobsubmit/samples/{n}</value>
		<value>/jobsubmit/cells/{n}</value>
		<value>/jobsubmit/helpTag/pair/{n}</value> 
		<value>/jobsubmit/software/aligner/{n}</value>
		<value>/jobsubmit/software/helptagPipeline/{n}</value>
		<!-- <value>/jobsubmit/verify/{n}</value> -->
		<value>/jobsubmit/submit/{n}</value>
		<value>/jobsubmit/ok</value>
      </list>
    </property>

    <property name="dependencies">
      <list>
        <value>mps</value>
        <value>aligner</value>
        <value>helptagPipeline</value>
      </list>
    </property>

    <property name="sampleSubtypes">
      <set>
        <value>helptagLibrarySample</value>
      </set>
    </property>
    
    <property name="uiFieldsFromWrapper">
      <list>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="workflow" />
          <property name="label" value="HELP Tagging" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="jobsubmit/modifymeta" />
          <property name="label" value="Modify HelpTag Metadata" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="jobsubmit/resource/mps" />
          <property name="label" value="MPS Sequencer Options" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="jobsubmit/samples" />
          <property name="label" value="Samples" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="jobsubmit/cells" />
          <property name="label" value="DNA Sequencer Cells" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="jobsubmit/helpTag/pair" />
          <property name="label" value="HpaII vs MspI Pairings" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="jobsubmit/software/aligner" />
          <property name="label" value="Aligner Selection" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="jobsubmit/software/helptagPipeline" />
          <property name="label" value="HELP-tag Pipeline Selection" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="jobsubmit/verify" />
          <property name="label" value="Verify Submission" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="pairing_instructions" />
          <property name="label" value="Please select HpaII vs MspI for all samples to be analyzed in pairs after sequencing." />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="test" />
          <property name="label" value="HpaII" />
        </bean>
        <bean parent="helpTagUiFieldWrapper">
          <property name="baseName" value="control" />
          <property name="label" value="MspI" />
        </bean>
     </list>
 
    </property>
  </bean>

</beans>
