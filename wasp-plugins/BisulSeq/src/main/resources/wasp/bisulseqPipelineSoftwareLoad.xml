<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
  <bean id="bisulseqPipelineArea" class="java.lang.String">
  	<constructor-arg><value>bisulseqPipeline</value></constructor-arg>
  </bean>

  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="bisulseqPipelineUiFieldWrapper">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" value="#{bisulseqPipelineArea}" />
  </bean>
  
  <bean id="bisulseqPipelineResourceType" class="edu.yu.einstein.wasp.model.ResourceType">
  	<property name="iName" value="bisulseqPipeline" />
  	<property name="name" value="Bi-sulphite-seq Pipeline" />
  </bean>

  <bean id="bisulseqPipelineSoftware" class="edu.yu.einstein.wasp.load.SoftwareLoadService">
    <property name="name" value="BISUL-seq Pipeline" />
    <property name="resourceType" ref="bisulseqPipelineResourceType" />
	<property name="area" value="#{bisulseqPipelineArea}" />
    <property name="metaFromWrapper">
       <bean class="edu.yu.einstein.wasp.load.MetaLoadWrapper">
         <property name="area" value="#{bisulseqPipelineArea}" />
          <property name="metaList">
         	<list>
         		<value>#{waspSoftware['currentVersion']}=1.0</value>
         		<value>#{waspSoftware['priorVersions']}=</value>
         	</list>
       	 </property>
       </bean>
    </property> 

    <property name="uiFieldsFromWrapper">
      <list>
        <bean parent="bisulseqPipelineUiFieldWrapper">
          <property name="baseName" value="SeqMode" />
          <property name="metaposition" value="10" />
          <property name="label" value="Is Reduced Representation Bisul-Seq?" />
          <property name="control" value="select:yes:yes;no:no" />
          <property name="default" value="no" />
        </bean>
        
        <bean parent="bisulseqPipelineUiFieldWrapper">
          <property name="baseName" value="NumMismatch" />
          <property name="metaposition" value="20" />
          <property name="label" value="Number of mismatch allowed" />
          <property name="type" value="NUMBER" />
          <property name="range" value="2:15" />
          <property name="default" value="2" />
        </bean>
        
        <bean parent="bisulseqPipelineUiFieldWrapper">
          <property name="baseName" value="ReportMode" />
          <property name="metaposition" value="30" />
          <property name="label" value="Only report unique hits?" />
          <property name="control" value="select:yes:yes;no:no" />
          <property name="default" value="yes" />
        </bean>
        
        <bean parent="bisulseqPipelineUiFieldWrapper">
          <property name="baseName" value="TrimQ" />
          <property name="metaposition" value="40" />
          <property name="label" value="Quality threshold in trimming" />
          <property name="default" value="0" />
          <property name="range" value="0:30" />
          <property name="type" value="NUMBER" />
        </bean>
        
        <bean parent="bisulseqPipelineUiFieldWrapper">
          <property name="baseName" value="MapFormard" />
          <property name="metaposition" value="50" />
          <property name="label" value="Only map to forward strands?" />
          <property name="control" value="select:yes:yes;no:no" />
          <property name="default" value="yes" />
        </bean>

        
      </list>
    </property>

  </bean> 

</beans>
