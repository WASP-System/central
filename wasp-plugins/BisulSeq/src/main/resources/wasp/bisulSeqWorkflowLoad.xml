<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
  <bean id="bisulSeqWorkflowArea" class="java.lang.String">
  	<constructor-arg><value>bisulSeq</value></constructor-arg>
  </bean>
  
  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="bisulSeqUiFieldWrapper">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" value="#{bisulSeqWorkflowArea}" />
  </bean>


  <bean id="bisulSeqWorkflow" class="edu.yu.einstein.wasp.load.WorkflowLoader" depends-on="bisulSeqDnaSampleSubtypeResource,bisulSeqLibrarySampleSubtypeResource">
    <property name="area" value="#{bisulSeqWorkflowArea}" />
    <property name="domain" value="#{bisulseqPluginDomain}" />
    <property name="name" value="BISUL Seq" />
    <property name="pageFlowOrder">
      <list>
		<value>/jobsubmit/modifymeta/{n}</value>
		<value>/jobsubmit/resource/mps/{n}</value>
		<value>/jobsubmit/samples/{n}</value>
		<value>/jobsubmit/cells/{n}</value>
		<value>/jobsubmit/software/bisulseqPipeline/{n}</value>
		<!-- <value>/jobsubmit/verify/{n}</value> -->
		<value>/jobsubmit/submit/{n}</value>
		<value>/jobsubmit/ok</value>
      </list>
    </property>

    <property name="dependencies">
      <list>
        <value>mps</value>
        <value>bisulseqPipeline</value>
      </list>
    </property>

    <property name="sampleSubtypes">
      <set>
        <value>bisulseqDnaSample</value>
        <value>bisulseqLibrarySample</value>
        <value>bisulseqFacilityLibrarySample</value>
      </set>
    </property>
    
    <property name="uiFieldsFromWrapper">
      <list>
        <bean parent="bisulSeqUiFieldWrapper">
          <property name="baseName" value="workflow" />
          <property name="label" value="BISUL Seq" />
        </bean>
        <bean parent="bisulSeqUiFieldWrapper">
          <property name="baseName" value="jobsubmit/modifymeta" />
          <property name="label" value="Modify BisulSeq Metadata" />
        </bean>
        <bean parent="bisulSeqUiFieldWrapper">
          <property name="baseName" value="jobsubmit/resource/mps" />
          <property name="label" value="MPS Sequencer Options" />
        </bean>
        <bean parent="bisulSeqUiFieldWrapper">
          <property name="baseName" value="jobsubmit/samples" />
          <property name="label" value="Samples" />
        </bean>
        <bean parent="bisulSeqUiFieldWrapper">
          <property name="baseName" value="jobsubmit/cells" />
          <property name="label" value="DNA Sequencer Cells" />
        </bean>
        <bean parent="bisulSeqUiFieldWrapper">
          <property name="baseName" value="jobsubmit/software/bisulseqPipeline" />
          <property name="label" value="BISUL-seq Pipeline Selection" />
        </bean>
        <bean parent="bisulSeqUiFieldWrapper">
          <property name="baseName" value="jobsubmit/verify" />
          <property name="label" value="Verify Submission" />
        </bean>
     </list>
 
    </property>
  </bean>

</beans>
