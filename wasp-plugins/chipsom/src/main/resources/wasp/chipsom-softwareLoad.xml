<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
	default-autowire="byName">

	<bean id="chipsomArea" class="java.lang.String">
		<constructor-arg value="chipsom" />
	</bean>

	<bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="bowtieAlignerUiFieldWrapper">
		<property name="baseLocale" value="en_US" />
		<property name="baseArea" value="#{chipsomArea}" />
	</bean>

	<!-- define "bedtools" as a resource that can be requested by other pipelines -->
	<bean id="chipsomResourceType" class="edu.yu.einstein.wasp.model.ResourceType">
		<property name="iName" value="chipsom" />
		<property name="name" value="ChIPsom" />
	</bean>

	<bean id="chipsomSoftware" class="edu.yu.einstein.wasp.load.SoftwareLoadService">
		<property name="name" value="Bedtools" />
		<property name="area" value="#{bedtoolsArea}" />
		<property name="resourceTypeByIName" value="bedtools" />

		<property name="metaFromWrapper">
			<bean class="edu.yu.einstein.wasp.load.MetaLoadWrapper">
				<property name="area" value="#{chipsomArea}" />
				<property name="metaList">
					<list>
						<value>#{bedtoolsSoftwareConfig['currentVersion']}=${bedtools.current.version}
						</value>
						<value>#{bedtoolsSoftwareConfig['executableDir']}=${wasp.apps.dir}/chipsom/${chipsom.current.version}/bin/
						</value>
					</list>
				</property>
			</bean>
		</property>

	<!-- TODO: extract dependency management code from WorkflowLoadService and implement in WaspResourceLoadService 
		<property name="dependencies">
			<list>
				<value>bedtools</value>
			</list>
		</property>
	-->

	</bean>
	
	<bean id="chipsomInit" class="java.lang.String" factory-method="valueOf">
		<constructor-arg value="${chipsom.init}"/>
	</bean>
	<bean id="chipsomExec" class="java.lang.String" factory-method="valueOf">
		<constructor-arg value="${chipsom.exec}"/>
	</bean>

</beans>