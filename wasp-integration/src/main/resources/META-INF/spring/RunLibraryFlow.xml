<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">

	<!-- Define step tasklets (Implement the Tasklet interface) -->
	<!-- Note: need scope="step" because the bean uses late-binding to evaluate the job parameter values -->
	<bean id="waitForRunStartTasklet" class="edu.yu.einstein.wasp.tasklets.libraryflow.WaitForRunStartTasklet" scope="step">
		<constructor-arg value="${jobParameters['platformUnitId']}" />
	</bean>
	
	<bean id="waitForRunStopTasklet" class="edu.yu.einstein.wasp.tasklets.libraryflow.WaitForRunStopTasklet" scope="step">
		<constructor-arg value="${jobParameters['platformUnitId']}" />
	</bean>
	
	<bean id="abandonRunTasklet" class="edu.yu.einstein.wasp.tasklets.libraryflow.AbandonRunTasklet" scope="step">
		<constructor-arg value="${jobParameters['platformUnitId']}" />
	</bean>
	
	<!-- Define flow -->
	<batch:flow id="runLibraryFlow">
		<batch:step id="waitForRunStart">
			<batch:tasklet ref="waitForRunStartTasklet" />
			<batch:next on="RUN STARTED" to="waitForRunStop" />
			<batch:next on="RUN FAILED" to="waitForRunStart" />
			<batch:next on="RUN ABANDONED" to="abandonRun" />
			<batch:fail on="*" />
		</batch:step>
		<batch:step id="waitForRunStop">
			<batch:tasklet ref="waitForRunStopTasklet" />
		</batch:step>
		<batch:step id="abandonRun">
			<batch:tasklet ref="abandonRunTasklet" />
		</batch:step>
	</batch:flow>
	
	<!-- define job -->
	<batch:job id="runLibraryJob">
		<batch:flow parent="runLibraryFlow" id="runLibraryFlowExecution" />
	</batch:job> 


</beans>
