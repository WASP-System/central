<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">

	<!-- Define step tasklets (Implement the Tasklet interface) -->
	<!-- Note: need scope="step" because the bean uses late-binding to evaluate the job parameter values -->
	<bean id="runStartTasklet" class="edu.yu.einstein.wasp.tasklets.runflow.RunStartTasklet" scope="step">
		<constructor-arg value="#{jobParameters['runId']}" />
		<constructor-arg value="#{jobParameters['platformUnitId']}" />
	</bean>
	
	<bean id="runCompleteTasklet" class="edu.yu.einstein.wasp.tasklets.runflow.RunCompleteTasklet" scope="step">
		<constructor-arg value="#{jobParameters['runId']}" />
		<constructor-arg value="#{jobParameters['platformUnitId']}" />
	</bean>

	<!-- Define flow -->
	<batch:flow id="runFlow">
		<batch:step id="runStartStep" next="runCompleteStep">			
			<batch:tasklet ref="runStartTasklet" />
		</batch:step>
		<batch:step id="runCompleteStep">
			<batch:tasklet ref="runCompleteTasklet" />
		</batch:step>
	</batch:flow> 
	
	<!-- define job -->
	<batch:job id="runJob">
		<batch:flow parent="runFlow" id="runFlowExecution" />
	</batch:job> 


</beans>
