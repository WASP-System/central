<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- common configuration imports -->
	<import resource="classpath:batch-context.xml" />
	<import resource="classpath:integration-context.xml" />
	
	<bean id='jobTasks' class="edu.yu.einstein.wasp.messages.WaspJobTask" />
	
	<bean id='waspJobQuoteTasklet' class="edu.yu.einstein.wasp.tasklets.job.WaitJobTaskApprovedTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job"/>
		<constructor-arg name="jobId" value="#{jobParameters['jobId']}" />
		<constructor-arg name="task" value='#{jobTasks.QUOTE}' />
	</bean>
	
	<bean id='waspJobPiApproveTasklet' class="edu.yu.einstein.wasp.tasklets.job.WaitJobTaskApprovedTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job"/>
		<constructor-arg name="jobId" value="#{jobParameters['jobId']}" />
		<constructor-arg name="task" value='#{jobTasks.PI_APPROVE}' />
	</bean>
	
	<bean id='waspJobAdminApproveTasklet' class="edu.yu.einstein.wasp.tasklets.job.WaitJobTaskApprovedTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job"/>
		<constructor-arg name="jobId" value="#{jobParameters['jobId']}" />
		<constructor-arg name="task" value='#{jobTasks.ADMIN_APPROVE}' />
	</bean>
	
	<bean id="waspJobListenForTaskApprovedTasklet" class="edu.yu.einstein.wasp.tasklets.job.WaitJobTaskApprovedTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job"/>
		<constructor-arg name="jobId" value="#{jobParameters['jobId']}" />
		<constructor-arg name="task" value='#{jobTasks.NOTIFY_STATUS}' />
	</bean>
	
	<bean id="waspJobListenForCompleteTasklet" class="edu.yu.einstein.wasp.tasklets.job.WaitJobCompleteTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job"/>
		<constructor-arg name="jobId" value="#{jobParameters['jobId']}" />
	</bean>
	
	
	<!-- import batch flows -->
	<import resource="classpath:/META-INF/spring/*Flow.xml" />
	<import resource="classpath:/META-INF/spring/chipSeq.waspJob.mainFlow.v1.xml" />
	

</beans>
