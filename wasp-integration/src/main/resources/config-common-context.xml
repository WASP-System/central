<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- common configuration imports -->
	<import resource="classpath:batch-context.xml" />
	<import resource="classpath:integration-context.xml" />
	
	<bean id='jobTasks' class="edu.yu.einstein.wasp.messages.WaspJobTask" />
	
	<bean id='sampleTasks' class="edu.yu.einstein.wasp.messages.WaspSampleTask" />
	
	<bean id='libraryTasks' class="edu.yu.einstein.wasp.messages.WaspLibraryTask" />
	
	<bean id="listenForJobQuotedTasklet" class="edu.yu.einstein.wasp.tasklets.ListenForStatusTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job" />
		<constructor-arg name="messageTemplate">
			<bean class="edu.yu.einstein.wasp.messages.JobStatusMessageTemplate" >
				<constructor-arg  name="jobId" value="#{jobParameters['jobId']}"/>
				<property name="task" value="#{jobTasks.QUOTE}" />
				<property name="status" value="COMPLETED" />
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="listenForJobPiApproveTasklet" class="edu.yu.einstein.wasp.tasklets.ListenForStatusTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job" />
		<constructor-arg name="messageTemplate">
			<bean class="edu.yu.einstein.wasp.messages.JobStatusMessageTemplate">
				<constructor-arg  name="jobId" value="#{jobParameters['jobId']}"/>
				<property name="task" value="#{jobTasks.PI_APPROVE}" />
				<property name="status" value="COMPLETED" />
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="listenForJobAdminApproveTasklet" class="edu.yu.einstein.wasp.tasklets.ListenForStatusTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job" />
		<constructor-arg name="messageTemplate">
			<bean class="edu.yu.einstein.wasp.messages.JobStatusMessageTemplate">
				<constructor-arg  name="jobId" value="#{jobParameters['jobId']}"/>
				<property name="task" value="#{jobTasks.ADMIN_APPROVE}" />
				<property name="status" value="COMPLETED" />
			</bean>
		</constructor-arg>
	</bean>
	
	
	<bean id="listenForJobFinishedStatusTasklet" class="edu.yu.einstein.wasp.tasklets.ListenForStatusTasklet" scope="step">
		<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.job" />
		<constructor-arg name="messageTemplate">
			<bean class="edu.yu.einstein.wasp.messages.JobStatusMessageTemplate">
				<constructor-arg  name="jobId" value="#{jobParameters['jobId']}"/>
				<property name="task" value="#{jobTasks.NOTIFY_STATUS}" />
			</bean>
		</constructor-arg>
	</bean>	
	
	<!-- import batch flows -->
	<import resource="classpath:/META-INF/spring/*Flow.xml" />
	<import resource="classpath:/META-INF/spring/chipSeq.waspJob.mainFlow.v1.xml" />
	

</beans>
