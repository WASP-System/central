<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
	default-autowire="byName">
	
	<bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="genericDnaSeqUiFieldWrapper">
	    <property name="baseLocale" value="en_US" />
	    <property name="baseArea" ref="genericDnaSeqPluginArea" />
  	</bean>

	<bean id="genericDnaSeqWorkflow" class="edu.yu.einstein.wasp.load.WorkflowLoaderFactory" factory-method="getWorkflowInstance">
		<constructor-arg name="area" ref="genericDnaSeqPluginArea" />
		<constructor-arg name="name" value="Generic DNA Seq" />
		<constructor-arg name="pageFlowOrder">
			<list>
				<value>/jobsubmit/modifymeta/{n}</value>
				<value>/jobsubmit/resource/mps/{n}</value>
				<value>/jobsubmit/samples/{n}</value>
				<value>/jobsubmit/cells/{n}</value>
				<value>/jobsubmit/software/aligner/{n}</value>
				<value>/jobsubmit/comment/{n}</value>
				<value>/jobsubmit/verify/{n}</value>
				<value>/jobsubmit/submit/{n}</value>
				<value>/jobsubmit/ok</value>
			</list>
		</constructor-arg>

		<constructor-arg name="jobFlowBatchJob" value="default.waspJob.jobflow.v1" />

		<constructor-arg name="dependencies">
			<list>
				<ref bean="mpsResourceType" />
        		<ref bean="referenceBasedAlignerResourceType" />
			</list>
		</constructor-arg>
		
		<constructor-arg name="sampleSubtypes">
		      <list>
		        <ref bean="genericDnaSeqDnaSampleSubtype" />
		        <ref bean="genericDnaSeqLibrarySampleSubtype" />
		        <ref bean="genericDnaSeqFacilityLibrarySampleSubtype" />
		      </list>
    	</constructor-arg>


		<constructor-arg name="uiFieldsFromWrapper">
			<list>
				<bean parent="genericDnaSeqUiFieldWrapper">
					<property name="baseName" value="workflow" />
					<property name="label" value="Generic DNA Seq" />
				</bean>
				<bean parent="genericDnaSeqUiFieldWrapper">
					<property name="baseName" value="jobsubmit/modifymeta" />
					<property name="label" value="Modify Generic DNA Seq Metadata" />
				</bean>
				<bean parent="genericDnaSeqUiFieldWrapper">
					<property name="baseName" value="jobsubmit/resource/mps" />
					<property name="label" value="MPS Sequencer Options" />
				</bean>
				<bean parent="genericDnaSeqUiFieldWrapper">
					<property name="baseName" value="jobsubmit/samples" />
					<property name="label" value="Samples" />
				</bean>
				<bean parent="genericDnaSeqUiFieldWrapper">
					<property name="baseName" value="jobsubmit/cells" />
					<property name="label" value="DNA Sequencer Cells" />
				</bean>
				<bean parent="genericDnaSeqUiFieldWrapper">
					<property name="baseName" value="jobsubmit/software/aligner" />
					<property name="label" value="Aligner Selection" />
				</bean>
				<bean parent="genericDnaSeqUiFieldWrapper">
					<property name="baseName" value="jobsubmit/comment" />
					<property name="label" value="Comments" />
				</bean>
				<bean parent="genericDnaSeqUiFieldWrapper">
					<property name="baseName" value="jobsubmit/verify" />
					<property name="label" value="Verify Submission" />
				</bean>
			</list>

		</constructor-arg>
   	 <constructor-arg name="workflowLoadService" ref="workflowLoadServiceImpl" />
	</bean>

</beans>
