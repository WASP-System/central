<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<batch:job id="edu.yu.einstein.wasp.helptag.prepFlow">
		<batch:step id="edu.yu.einstein.wasp.helptag.prepFlow.notifyHelptagStart" next="edu.yu.einstein.wasp.helptag.prepFlow.align">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.helptag.integration.messages.SimpleHelptagStatusMessageTemplate">
							<property name="status" value="STARTED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>

		<batch:step id="edu.yu.einstein.wasp.helptag.prepFlow.align" next="edu.yu.einstein.wasp.helptag.prepFlow.listenForAlignComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.analysis.WaspJobSoftwareLaunchTaskletImpl" scope="step">
					<constructor-arg name="cellLibraryId" value="#{jobParameters[waspSoftwareJobParameters.CELL_LIBRARY_ID]}"/>
					<constructor-arg name="softwareResourceType" ref="referenceBasedAlignerResourceType" />
					<constructor-arg name="task" value="#{batchJobTasks.ANALYSIS_LIBRARY_PREPROCESS}" />
				</bean>
			</batch:tasklet>
		</batch:step>

		<batch:step id="edu.yu.einstein.wasp.helptag.prepFlow.listenForAlignComplete" >
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.ListenForStatusTasklet" scope="step">
					<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.analysis" />
					<constructor-arg name="abortMonitoringChannel" ref="wasp.channel.notification.abort" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobParameters[waspJobParameters.CELL_LIBRARY_ID]}"/>
							<property name="task" value="#{sequencingBatchJobTasks.ALIGNMENT}" />
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
			<batch:next on="FAILED" to="edu.yu.einstein.wasp.helptag.prepFlow.notifyFailed" />
			<batch:next on="*" to="edu.yu.einstein.wasp.helptag.prepFlow.countHpaii" />
		</batch:step>
		
		<batch:step id="edu.yu.einstein.wasp.helptag.prepFlow.countHpaii" next="edu.yu.einstein.wasp.helptag.prepFlow.listForHcountComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.helptag.batch.tasklet.HelptagTasklet" scope="step">
<!-- 				<constructor-arg name="cellLibraryIds" value="#{jobParameters[waspSoftwareJobParameters.CELL_LIBRARY_ID_LIST]}" />  -->
					<constructor-arg name="cellLibraryId" value="#{jobParameters[waspJobParameters.CELL_LIBRARY_ID]}" />
				</bean>
			</batch:tasklet>
		</batch:step>

		<batch:step id="edu.yu.einstein.wasp.helptag.prepFlow.listForHcountComplete" >
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.ListenForStatusTasklet" scope="step">
					<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.analysis" />
					<constructor-arg name="abortMonitoringChannel" ref="wasp.channel.notification.abort" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobParameters[waspJobParameters.CELL_LIBRARY_ID]}"/>
							<property name="task" value="HpaiiCounting" />
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
			<batch:next on="FAILED" to="edu.yu.einstein.wasp.helptag.prepFlow.notifyFailed" />
			<batch:next on="*" to="edu.yu.einstein.wasp.helptag.prepFlow.notifyComplete" />
		</batch:step>
		
		<batch:step id="edu.yu.einstein.wasp.helptag.prepFlow.notifyComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.helptag.integration.messages.SimpleHelptagStatusMessageTemplate">
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>

		<batch:step id="edu.yu.einstein.wasp.helptag.prepFlow.notifyFailed" >
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobParameters[waspJobParameters.CELL_LIBRARY_ID]}"/>
							<property name="task" value="#{batchJobTasks.ANALYSIS_LIBRARY_PREPROCESS}"/>
							<property name="status" value="FAILED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
	</batch:job>

	<bean id="edu.yu.einstein.wasp.helptag.prepFlow.skipTasklet" class="edu.yu.einstein.wasp.daemon.batch.tasklets.SkipTasklet" scope="step" />

</beans>

