<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">



  <bean id="helptagLibraryArea" class="java.lang.String">
  	<constructor-arg><value>helptagLibrary</value></constructor-arg>
  </bean>
    
   
  <bean id="helptagLibraryAdaptorsetLoad" class="edu.yu.einstein.wasp.load.AdaptorsetLoaderAndFactory" factory-method="getAdaptorSetInstance" >
  	<constructor-arg name="area" ref="helptagLibraryArea" />
  	<constructor-arg name="name" value="HELP-tag Library" />
  	<constructor-arg name="sampleType" ref="librarySampleType" />
  	<constructor-arg name="compatibleResources">
  		<list>
  			<ref bean ="illuminaHiSeq2000" />
  		</list>
  	</constructor-arg>
  	<constructor-arg name="adaptorList">
  		<list>
  			<bean class="edu.yu.einstein.wasp.model.Adaptor">
  				<property name="IName" value="illuminaHelptagLibrary1" />
  				<property name="name" value="helptag Adaptor" />
  				<property name="sequence" value="CGCTGCTG" />
  				<property name="barcodesequence" value="CGCTGCTG" />
  				<property name="barcodenumber" value="1" />
  			</bean>
   		</list>
  	</constructor-arg>
  	<constructor-arg name="adaptorsetLoadService" ref="adaptorsetLoadServiceImpl"/>
  </bean> 

</beans>
