<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<batch:job id="edu.yu.einstein.wasp.macstwo.mainFlow">
		<batch:step id="edu.yu.einstein.wasp.macstwo.mainFlow.notifyMacstwoStart" next="edu.yu.einstein.wasp.macstwo.mainFlow.performAction">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.macstwo.integration.messages.SimpleMacstwoStatusMessageTemplate">
							<property name="status" value="STARTED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
		<batch:step id="edu.yu.einstein.wasp.macstwo.mainFlow.performAction" next="edu.yu.einstein.wasp.macstwo.generateModelAsPdf.performAction">
			<!-- next line is an example of a do-nothing tasklet -->
			<!-- <batch:tasklet ref="edu.yu.einstein.wasp.macstwo.mainFlow.skipTasklet" /> -->
			<batch:tasklet>
				<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.macstwo.batch.tasklet.MacstwoTasklet" scope="step">
					<constructor-arg name="testCellLibraryIdListAsString" value="#{jobParameters[waspSoftwareJobParameters.TEST_LIBRARY_CELL_ID_LIST]}" />
					<constructor-arg name="controlCellLibraryIdListAsString" value="#{jobParameters[waspSoftwareJobParameters.CONTROL_LIBRARY_CELL_ID_LIST]}" />
				</bean>
			</batch:tasklet>
			<batch:listeners>
				<batch:listener ref="macstwoPromotionListener" />
			</batch:listeners>
		</batch:step>
		<batch:step id="edu.yu.einstein.wasp.macstwo.generateModelAsPdf.performAction" next="edu.yu.einstein.wasp.macstwo.mainFlow.notifyComplete">
			<!-- next line is an example of a do-nothing tasklet -->
			<!-- <batch:tasklet ref="edu.yu.einstein.wasp.macstwo.mainFlow.skipTasklet" /> -->
			<batch:tasklet>
				<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.macstwo.batch.tasklet.MacstwoGenerateModelAsPdfTasklet" scope="step">
				</bean>
			</batch:tasklet>
			
		</batch:step>
		<batch:step id="edu.yu.einstein.wasp.macstwo.mainFlow.notifyComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.macstwo.integration.messages.SimpleMacstwoStatusMessageTemplate">
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
	</batch:job>

	<bean id="edu.yu.einstein.wasp.macstwo.mainFlow.skipTasklet" class="edu.yu.einstein.wasp.daemon.batch.tasklets.SkipTasklet" scope="step" />
	
	<bean id="macstwoPromotionListener" class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
		<property name="keys" value="modelScriptGIdAsString"  />
		<property name="statuses" value="COMPLETED,FAILED" />
	</bean>
	
</beans>

