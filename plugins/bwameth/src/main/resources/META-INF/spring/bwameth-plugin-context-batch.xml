<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	default-autowire="byName"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="edu.yu.einstein.wasp.plugin.bwameth.service.impl" />
	
	<!-- common definitions -->
	<import resource="bwameth-plugin-context-common.xml" />
	
	<!-- statics for tasks associated with messages  -->
	<bean id="bwamethBatchJobTask" class="edu.yu.einstein.wasp.plugin.bwameth.integration.messages.BwamethBatchJobTask"/>
	
</beans>
