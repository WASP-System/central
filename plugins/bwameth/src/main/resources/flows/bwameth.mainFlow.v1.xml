<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<batch:job id="edu.yu.einstein.wasp.plugin.bwameth.mainFlow">
		<batch:step id="edu.yu.einstein.wasp.plugin.bwameth.mainFlow.notifyBwamethStart" next="edu.yu.einstein.wasp.plugin.bwameth.mainFlow.performAction">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.plugin.bwameth.integration.messages.SimpleBwamethStatusMessageTemplate">
							<property name="status" value="STARTED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
		<batch:step id="edu.yu.einstein.wasp.plugin.bwameth.mainFlow.performAction" next="edu.yu.einstein.wasp.plugin.bwameth.mainFlow.notifyComplete">
			<!-- example do-nothing tasklet -->
			<batch:tasklet ref="edu.yu.einstein.wasp.plugin.bwameth.mainFlow.skipTasklet" />
		</batch:step>
		<batch:step id="edu.yu.einstein.wasp.plugin.bwameth.mainFlow.notifyComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.plugin.bwameth.integration.messages.SimpleBwamethStatusMessageTemplate">
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
	</batch:job>

	<bean id="edu.yu.einstein.wasp.plugin.bwameth.mainFlow.skipTasklet" class="edu.yu.einstein.wasp.daemon.batch.tasklets.SkipTasklet" scope="step" />

</beans>

