<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">
		
	<!-- Define chipSeq analysis aggregate flow -->
	<batch:job id="chipSeq.library.aggregate.jobflow.v1" restartable="true" >
		<batch:step id="chipSeq.library.aggregate.step.notifyStarted" next="chipSeq.library.aggregate.step.callPeaks">
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="jobId" value="#{jobParameters[waspJobParameters.JOB_ID]}"/>
							<property name="task" value="#{batchJobTasks.ANALYSIS_AGGREGATE}"/>
							<property name="status" value="CREATED" />
						</bean>
					</constructor-arg>
					<property name="name" value="chipSeq.library.aggregate.notifyStarted" />
				</bean>
			</batch:tasklet>
		</batch:step>
		
		<batch:step id="chipSeq.library.aggregate.step.callPeaks" next="chipSeq.library.aggregate.step.listenForPeakCallerComplete">
			<batch:tasklet>
				<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.chipseq.batch.tasklet.PeakCallerTasklet" scope="step">
					<constructor-arg name="libraryCellId" value="#{jobParameters[waspJobParameters.LIBRARY_CELL_ID]}"/>
					<!--  <constructor-arg name="softwareResourceType" ref="peakcallerResourceType" />
					<constructor-arg name="task" value="#{batchJobTasks.ANALYSIS_LIBRARY_PREPROCESS}" />
					
					<property name="name" value="chipSeq.library.aggregate.step.callPeaks" />
					-->
				</bean>
			</batch:tasklet>
		</batch:step>
		
		<batch:step id="chipSeq.library.aggregate.step.listenForPeakCallerComplete" >
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.ListenForStatusTasklet" scope="step">
					<constructor-arg name="inputSubscribableChannel" ref="wasp.channel.notification.analysis" />
					<constructor-arg name="abortMonitoringChannel" ref="wasp.channel.notification.abort" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobParameters[waspJobParameters.LIBRARY_CELL_ID]}"/>
							<property name="task" value="#{sequencingBatchJobTasks.ALIGNMENT}" />
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
					<property name="name" value="chipseq.library.preProcess.step.listenForAlignComplete" />
				</bean>
			</batch:tasklet>
			<batch:next on="FAILED" to="chipSeq.library.aggregate.step.notifyFailed" />
			<batch:next on="COMPLETED" to="chipSeq.library.aggregate.step.notifyCompleted" />
		</batch:step>
		
		<batch:step id="chipSeq.library.aggregate.step.notifyCompleted" >
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobParameters[waspJobParameters.LIBRARY_CELL_ID]}"/>
							<property name="task" value="#{batchJobTasks.ANALYSIS_LIBRARY_PREPROCESS}"/>
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
					<property name="name" value="chipSeq.library.aggregate.step.notifyCompleted" />
				</bean>
			</batch:tasklet>
		</batch:step>
		<batch:step id="chipSeq.library.aggregate.step.notifyFailed" >
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobParameters[waspJobParameters.LIBRARY_CELL_ID]}"/>
							<property name="task" value="#{batchJobTasks.ANALYSIS_LIBRARY_PREPROCESS}"/>
							<property name="status" value="FAILED" />
						</bean>
					</constructor-arg>
					<property name="name" value="chipSeq.library.aggregate.step.notifyFailed" />
				</bean>
			</batch:tasklet>
		</batch:step>
		
	</batch:job>

</beans>
