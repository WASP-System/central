<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd"
    default-autowire="byName">
    
  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapperAndLoader" abstract="true" id="rUiFieldWrapper">
    <property name="baseArea" ref="rPluginArea" />
  </bean>

  <bean id="r" class="edu.yu.einstein.wasp.load.SoftwareLoaderAndFactory">
  	<property name="type"><value type="java.lang.Class">edu.yu.einstein.wasp.r.software.R</value></property>
    <property name="name" value="R" />
    <property name="description" value="The R Project for Statistical Computing" />
    <property name="area" ref="rPluginArea" />
    <property name="resourceType" ref="genericPluginResourceType" /> <!-- TODO: choose a more appropriate resource type -->
	
	<property name="metaFromWrapper">
       <bean class="edu.yu.einstein.wasp.load.MetaLoadWrapper">
         <property name="area" ref="rPluginArea" />
         <!-- Load any software metadata 
         <property name="metaList">
         	<list>
         		<value>r.myMetaValue=foo</value>
         	</list>
       	 </property>
       	 -->
       </bean>
    </property> 
  </bean> 

</beans>
