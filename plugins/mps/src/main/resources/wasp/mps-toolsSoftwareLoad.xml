<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
	default-autowire="byName">

	<bean id="picardArea" class="java.lang.String">
		<constructor-arg>
			<value>picard</value>
		</constructor-arg>
	</bean>

	<bean id="samtoolsArea" class="java.lang.String">
		<constructor-arg>
			<value>samtools</value>
		</constructor-arg>
	</bean>

	<bean id="picard" class="edu.yu.einstein.wasp.load.SoftwareLoaderAndFactory">
		<property name="type"><value type="java.lang.Class">edu.yu.einstein.wasp.mps.tools.Picard</value></property>
		<property name="name" value="Picard" />
		<property name="area" ref="picardArea" />
		<property name="resourceType" ref="bamProcessorResourceType" />
	</bean>
	
	<bean id="samtools" class="edu.yu.einstein.wasp.load.SoftwareLoaderAndFactory">
		<property name="type"><value type="java.lang.Class">edu.yu.einstein.wasp.mps.tools.SAMTools</value></property>
		<property name="name" value="SAMTools" />
		<property name="area" ref="samtoolsArea" />
		<property name="resourceType" ref="bamProcessorResourceType" />
	</bean>
	

</beans>
