<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapperAndLoader" abstract="true" id="gatkUiFieldWrapper">
    <!--  <property name="baseLocale" value="en_US" /> -->
    <property name="baseArea" ref="gatkPluginArea" />
  </bean>

  <bean id="gatkPipeline" class="edu.yu.einstein.wasp.load.SoftwareLoaderAndFactory">
  	<property name="type"><value type="java.lang.Class">edu.yu.einstein.wasp.gatk.software.GATKSoftwareComponent</value></property>
    <property name="name" value="Gatk" />
    <property name="description" value="genome analysis tool kit broad institute" />
    <property name="area" ref="gatkPluginArea" />
    <property name="resourceType" ref="genericPluginResourceType" /> <!-- TODO: choose a more appropriate resource type -->
	
	<property name="metaFromWrapper">
       <bean class="edu.yu.einstein.wasp.load.MetaLoadWrapper">
         <property name="area" ref="gatkPluginArea" />
         <!-- Load any software metadata 
         <property name="metaList">
         	<list>
         		<value>gatk.myMetaValue=foo</value>
         	</list>
       	 </property>
       	 -->
       </bean>
    </property> 
    <!-- If specifying form elements these may be done below
    <property name="uiFieldsFromWrapper">
      <list>
        <bean parent="gatkUiFieldWrapper">
          <property name="baseName" value="" />
           <property name="metaposition" value="" />
           <property name="label" value="" />
           <property name="type" value="" />
           <property name="range" value="" />
           <property name="default" value="" />
           <property name="constraint" value="" />
           <property name="error" value="" />
           <property name="tooltip" value="" />
        </bean>
      </list>
    </property> 
	-->
  </bean> 

</beans>
