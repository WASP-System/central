<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
    default-autowire="byName">
   
 
  <!-- gatk Library sample -->

  <bean id="gatkLibraryUiFieldWrapper" class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapperAndLoader" abstract="true">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" value="gatkLibrary" />
  </bean>

  <bean id="gatkLibrarySpecificUiFields" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
     	<list value-type="edu.yu.einstein.wasp.load.UiFieldFamilyWrapperAndLoader">
			<bean parent="gatkLibraryUiFieldWrapper">
	          <property name="baseName" value="capture" />
	          <property name="label" value="gatk.capture.label" />
	          <property name="metaposition" value="60" />
	          <property name="control" value="gatk.capture.control" /> 
	          <property name="constraint" value="NotEmpty" />
	          <property name="error" value="gatk.capture.error" />
	        </bean>
	      </list>
      </property>
  </bean>
 
  <bean id="gatkLibrarySampleSubtype" class="edu.yu.einstein.wasp.load.SampleSubtypeLoaderAndFactory">
  	<property name="name" value="GATK Library" />
    <property name="area" value="gatkLibrarySample" />
    <property name="sampleType" ref="librarySampleType" />
    <property name="uiFieldGroupsFromWrapper">
    	<list>
    		<ref bean="genericBiomoleculeUiFields" /> 
    		<ref bean="genericLibraryUiFields" />
    		<ref bean="gatkLibrarySpecificUiFields" />
    	</list>
    </property>
    <property name="applicableRoles" value="ft,lu" />
  </bean>
  
 
  
</beans>
