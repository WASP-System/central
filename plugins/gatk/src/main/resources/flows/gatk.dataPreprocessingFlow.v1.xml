<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<batch:job id="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow">
	
		<batch:step id="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.notifyGatkStart" next="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.createTarget">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobParameters[waspSoftwareJobParameters.CELL_LIBRARY_ID_LIST]}"/> <!-- should only be one value which will cast to Integer ok -->
							<property name="task" value="#{sequencingBatchJobTasks.VARIANT_DATA_PREPROCESS}"/>
							<property name="status" value="STARTED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
		
		<batch:step id="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.createTarget">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.preprocess.CreateTargetTasklet" scope="step">
					<constructor-arg name="cellLibraryIds" value="#{jobParameters[waspSoftwareJobParameters.CELL_LIBRARY_ID_LIST]}" />
				</bean>
			</batch:tasklet>
			<batch:next on="FAILED" to="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.notifyGATKFailed" />
			<batch:next on="*" to="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.localAlign" />
			<batch:listeners>
				<batch:listener>
					<bean class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
						<property name="keys" value="scrDir,createTargetName,cellLibId"  />
						<property name="statuses" value="COMPLETED,FAILED" />
					</bean>
				</batch:listener>
			</batch:listeners>
		</batch:step>
		
		<batch:step id="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.localAlign">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.preprocess.LocalAlignTasklet" scope="step" />
			</batch:tasklet>
			<batch:next on="FAILED" to="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.notifyGATKFailed" />
			<batch:next on="*" to="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.recaliTable" />
			<batch:listeners>
				<batch:listener>
					<bean class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
						<property name="keys" value="localAlignJobName"  />
						<property name="statuses" value="COMPLETED,FAILED" />
					</bean>
				</batch:listener>
			</batch:listeners>
		</batch:step>
		
		
		<batch:step id="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.recaliTable">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.preprocess.RecaliTableTasklet" scope="step" />
			</batch:tasklet>
			<batch:next on="FAILED" to="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.notifyGATKFailed" />
			<batch:next on="*" to="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.printRecali" />
			<batch:listeners>
				<batch:listener>
					<bean class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
						<property name="keys" value="recaliTableJobName"  />
						<property name="statuses" value="COMPLETED,FAILED" />
					</bean>
				</batch:listener>
			</batch:listeners>
		</batch:step>
		
		<batch:step id="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.printRecali">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.preprocess.PrintRecaliTasklet" scope="step" />
			</batch:tasklet>
			<batch:next on="FAILED" to="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.notifyGATKFailed" />
			<batch:next on="*" to="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.notifyComplete" />
		</batch:step>
		
		
		<batch:step id="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.notifyComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobExecutionContext['cellLibId']}"/>
							<property name="task" value="#{sequencingBatchJobTasks.VARIANT_DATA_PREPROCESS}"/>
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
		
		<batch:step id="edu.yu.einstein.wasp.gatk.dataPreprocessingFlow.notifyGATKFailed">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobExecutionContext['cellLibId']}"/>
							<property name="task" value="#{sequencingBatchJobTasks.VARIANT_DATA_PREPROCESS}" />
							<property name="status" value="FAILED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
			<batch:fail on="*" />
		</batch:step>
		
	</batch:job>


	<bean id="gatkPromotionListener" class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
		<property name="keys" value="scrDir,createTargetName,localAlignName,recaliTableName,printRecaliName,cellLibId"  />
		<property name="statuses" value="COMPLETED,FAILED" />
	</bean>
	
</beans>