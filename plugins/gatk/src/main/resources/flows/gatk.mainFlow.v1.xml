		<batch:step id="edu.yu.einstein.wasp.gatk.mainFlow.creatTarget" next="edu.yu.einstein.wasp.gatk.mainFlow.localAlign">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.CreatTargetTasklet" scope="step">
					<constructor-arg name="cellLibraryIds" value="#{jobParameters[waspSoftwareJobParameters.LIBRARY_CELL_ID_LIST]}" />
				</bean>
			</batch:tasklet>
			<batch:listeners>
				<batch:listener ref="gatkPromotionListener" />
			</batch:listeners>
		</batch:step>
		
		<batch:step id="edu.yu.einstein.wasp.gatk.mainFlow.localAlign" next="edu.yu.einstein.wasp.gatk.mainFlow.recaliTable">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.LocalAlignTasklet" scope="step" />
			</batch:tasklet>
			<batch:listeners>
				<batch:listener ref="gatkPromotionListener" />
			</batch:listeners>
		</batch:step>
		
		
		<batch:step id="edu.yu.einstein.wasp.gatk.mainFlow.recaliTable" next="edu.yu.einstein.wasp.gatk.mainFlow.printRecali">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.RecaliTableTasklet" scope="step" />
			</batch:tasklet>
			<batch:listeners>
				<batch:listener ref="gatkPromotionListener" />
			</batch:listeners>
		</batch:step>
		
		<batch:step id="edu.yu.einstein.wasp.gatk.mainFlow.printRecali" next="edu.yu.einstein.wasp.gatk.mainFlow.notifyComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.PrintRecaliTasklet" scope="step" />
			</batch:tasklet>
		</batch:step>
		
		
		<batch:step id="edu.yu.einstein.wasp.gatk.mainFlow.notifyComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.gatk.integration.messages.SimpleGatkStatusMessageTemplate">
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
		
	</batch:job>


	<bean id="gatkPromotionListener" class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
		<property name="keys" value="scrDir,creatTargetName,localAlignName,recaliTableName,printRecaliName,cellLibId"  />
		<property name="statuses" value="COMPLETED,FAILED" />
	</bean>
	
</beans>