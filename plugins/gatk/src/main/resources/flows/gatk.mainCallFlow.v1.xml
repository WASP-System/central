<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<batch:job id="edu.yu.einstein.wasp.gatk.mainCallFlow">
	
		
		 
		<batch:step id="edu.yu.einstein.wasp.gatk.mainCallFlow.callVariant" next="edu.yu.einstein.wasp.gatk.mainCallFlow.hardFilter">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.CallVariantTasklet" scope="step">
					<constructor-arg name="cellLibraryIds" value="#{jobParameters[waspSoftwareJobParameters.LIBRARY_CELL_ID_LIST]}" />
				</bean>
			</batch:tasklet>
			<batch:listeners>
				<batch:listener ref="gatkCallPromotionListener" />
			</batch:listeners>
		</batch:step>
		
		
	
		
		<batch:step id="edu.yu.einstein.wasp.gatk.mainCallFlow.hardFilter" next="edu.yu.einstein.wasp.gatk.mainCallFlow.notifyComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.gatk.batch.tasklet.HardFilterTasklet" scope="step" />
			</batch:tasklet>
		</batch:step>
		
		
		<batch:step id="edu.yu.einstein.wasp.gatk.mainCallFlow.notifyComplete">
			<batch:tasklet>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.gatk.integration.messages.SimpleGatkStatusMessageTemplate">
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
		
	</batch:job>


	<bean id="gatkCallPromotionListener" class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
		<property name="keys" value="scrDir,jobId,callVariantName,hardFilterName,cellLibId"  />
		<property name="statuses" value="COMPLETED,FAILED" />
	</bean>
	
</beans>