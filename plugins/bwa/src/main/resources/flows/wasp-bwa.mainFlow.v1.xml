<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

	<!-- for job, call with parameter 'runID' -->
	<batch:flow id="wasp-bwa.alignmentFlow">

		<batch:step id="wasp-bwa.alignmentFlow.BWAaln">
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.plugin.bwa.batch.tasklet.BWAalnTasklet" scope="step">
					<constructor-arg name="cellLibraryIds" value="#{jobParameters[waspSoftwareJobParameters.LIBRARY_CELL_ID_LIST]}" />
				</bean>
			</batch:tasklet>
			<batch:next on="FAILED" to="wasp-bwa.alignmentFlow.notifyBWAFailed" />
			<batch:next on="*" to="wasp-bwa.alignmentFlow.BWAsam" />
			<batch:listeners>
				<batch:listener ref="bwaPromotionListener" />
			</batch:listeners>
		</batch:step>

		<batch:step id="wasp-bwa.alignmentFlow.BWAsam">
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.plugin.bwa.batch.tasklet.BWAsamTasklet" scope="step" />
			</batch:tasklet>
			<batch:next on="FAILED" to="wasp-bwa.alignmentFlow.notifyBWAFailed" />
			<batch:next on="*" to="wasp-bwa.alignmentFlow.mergeBAM" />
		</batch:step>

		<batch:step id="wasp-bwa.alignmentFlow.mergeBAM" >
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.plugin.bwa.batch.tasklet.BWAMergeSortTasklet" scope="step" />
			</batch:tasklet>
			<batch:next on="FAILED" to="wasp-bwa.alignmentFlow.notifyBWAFailed" />
			<batch:next on="*" to="wasp-bwa.alignmentFlow.notifyBWAComplete" />
		</batch:step>

		<batch:step id="wasp-bwa.alignmentFlow.notifyBWAComplete">
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobExecutionContext['cellLibId']}"/>
							<property name="task" value="#{sequencingBatchJobTasks.ALIGNMENT}" />
							<property name="status" value="COMPLETED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>
		
		<batch:step id="wasp-bwa.alignmentFlow.notifyBWAFailed">
			<batch:tasklet>
						<batch:transaction-attributes propagation="NEVER"/>
				<bean class="edu.yu.einstein.wasp.daemon.batch.tasklets.NotifyStatusTasklet" scope="step">
					<constructor-arg name="outputMessageChannel" ref="wasp.channel.batch" />
					<constructor-arg name="messageTemplate">
						<bean class="edu.yu.einstein.wasp.integration.messages.templates.AnalysisStatusMessageTemplate">
							<property name="cellLibraryId" value="#{jobExecutionContext['cellLibId']}"/>
							<property name="task" value="#{sequencingBatchJobTasks.ALIGNMENT}" />
							<property name="status" value="FAILED" />
						</bean>
					</constructor-arg>
				</bean>
			</batch:tasklet>
		</batch:step>

	</batch:flow>

	<bean id="bwaPromotionListener" class="org.springframework.batch.core.listener.ExecutionContextPromotionListener">
		<property name="keys" value="scrDir,alnName,alnStr,cellLibId"  />
		<property name="statuses" value="COMPLETED,FAILED" />
	</bean>
	
	<batch:job id="wasp-bwa.alignment">
		<batch:flow id="wasp-bwa.align" parent="wasp-bwa.alignmentFlow"/>
	</batch:job>
	
</beans>
