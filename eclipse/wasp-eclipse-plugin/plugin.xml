<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin id="wasp-eclipse-plugin" version="0.1.0.qualifier" name="Wasp System Eclipse Plugin">
   <requires>
      <import plugin="org.eclipse.jdt.core" version="3.8.3"/>
      <import plugin="org.eclipse.core.resources" version="3.8.1"/>
      <import plugin="org.eclipse.core.runtime" version="3.8.0"/>
      <import plugin="org.eclipse.jface" version="3.8.101"/>
      <import plugin="org.eclipse.m2e.maven.runtime" version="1.3.0"/>
      <import plugin="org.eclipse.ui.ide" version="3.8.2"/>
      <import plugin="org.eclipse.m2e.core" version="1.3.0"/>
      <import plugin="org.eclipse.ui.workbench" version="3.104.0"/>
   </requires>
   	<extension point="org.eclipse.ui.newWizards">
		<category id="edu.yu.einstein.wasp" name="%wasp.wizard.name"/>
		
		<wizard id="edu.yu.einstein.wasp.eclipse.wizards.WaspPluginProjectWizard"
				category="edu.yu.einstein.wasp"
				class="edu.yu.einstein.wasp.eclipse.internal.wizards.WaspPluginProjectWizard"
				icon="icons/wasp_project.gif"
				name="%wasp.wizard.project.name"
				project="true">
			<description>%wasp.wizard.project.description</description>
		</wizard>
	</extension>

</plugin>
