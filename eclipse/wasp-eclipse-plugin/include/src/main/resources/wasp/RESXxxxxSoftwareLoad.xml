<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="___pluginname___UiFieldWrapper">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" ref="___pluginname___PluginArea" />
  </bean>

  <bean id="___pluginname___" class="edu.yu.einstein.wasp.load.SoftwareLoaderAndFactory">
  	<property name="type"><value type="java.lang.Class">___package___.software.___Pluginname___</value></property>
    <property name="name" value="___Pluginname___" />
    <property name="description" value="___description___" />
    <property name="area" ref="___pluginname___PluginArea" />
    <property name="resourceType" ref="genericPluginResourceType" /> <!-- TODO: choose a more appropriate resource type -->
	
	<property name="metaFromWrapper">
       <bean class="edu.yu.einstein.wasp.load.MetaLoadWrapper">
         <property name="area" ref="___pluginname___PluginArea" />
         <!-- Load any software metadata 
         <property name="metaList">
         	<list>
         		<value>___pluginname___.myMetaValue=foo</value>
         	</list>
       	 </property>
       	 -->
       </bean>
    </property> 
