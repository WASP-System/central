<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="___pluginname___UiFieldWrapper">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" ref="___pluginname___Area" />
  </bean>

  <bean id="fastqc" class="edu.yu.einstein.wasp.load.SoftwareLoaderAndFactory">
  	<property name="type"><value type="java.lang.Class">___package___.software.___Pluginname___</value></property>
    <property name="name" value="___Pluginname___" />
    <property name="area" ref="___pluginname___Area" />
    <property name="resourceType" ref="fastqProcessorResourceType" />
	
	<property name="metaFromWrapper">
       <bean class="edu.yu.einstein.wasp.load.MetaLoadWrapper">
         <property name="area" ref="___pluginname___Area" />
         <property name="metaList">
         	<list>
         		<value>#{waspSoftware['currentVersion']}=0.0.0</value> <!-- TODO: set correct version -->
         	</list>
       	 </property>
       </bean>
    </property> 
