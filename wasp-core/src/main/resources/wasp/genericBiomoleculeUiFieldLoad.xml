<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-autowire="byName"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="genericBiomoleculeUiFieldWrapper">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" value="genericBiomolecule" />
  </bean> 

  <bean id="genericBiomoleculeUiFields" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list value-type="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper">
        <bean parent="genericBiomoleculeUiFieldWrapper">
          <property name="baseName" value="species" />
          <property name="label" value="Species" />
          <property name="metaposition" value="10" />
          <property name="control" value="select:#{dollar}{organisms}:name:name" /> 
          <!-- property name="control" value="select:Human [Homo sapiens - GRCh37]:Human [Homo sapiens - GRCh37];Mouse [Mus musculus - GRCm38]:Mouse [Mus musculus - GRCm38]; Other:Other"  /-->
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must select a species" />
        </bean>
      </list>
    </property>
  </bean>
</beans>
