<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-autowire="byName"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="genericBiomoleculeUiFieldWrapper">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" value="genericBiomolecule" />
  </bean> 

  <bean id="genericBiomoleculeUiFields" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list value-type="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper">
        <bean parent="genericBiomoleculeUiFieldWrapper">
          <property name="baseName" value="organism" />
          <property name="label" value="Organism" />
          <property name="metaposition" value="10" />
          <property name="control" value="select:#{dollar}{organisms}:ncbiID:name" /> 
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must select an organism" />
        </bean>
      </list>
    </property>
  </bean>
</beans>
