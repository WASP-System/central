<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
    default-autowire="byName">

  <bean class="edu.yu.einstein.wasp.model.UiField" id="taskQuoteJobUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="quoteJob" />
  </bean>

  <bean id="quoteJobTask" class="edu.yu.einstein.wasp.load.TaskLoadService">

    <property name="iName" value="Quote Job" />
    <property name="name" value="Quote Job" />
    <property name="uiFields">
      <list>
        <bean parent="taskQuoteJobUiField">
          <property name="name" value="tmpl" />
          <property name="attrName" value="tmpl" />
          <property name="attrValue" value="Tmpl" />
        </bean>
      </list>
    </property>

    <property name="taskMapping">
      <list>
        <bean class="edu.yu.einstein.wasp.model.TaskMapping">
          <property name="status" value="CREATED" />
          <property name="listMap" value="/job2quote/list.do" />
          <property name="detailMap" value="/def.do" />
          <property name="permission" value="hasRole('su') or hasRole('da-#departmentId') or hasRole('fm') or hasRole('ft')" />
        </bean>
      </list>
    </property>

  </bean>
</beans>
