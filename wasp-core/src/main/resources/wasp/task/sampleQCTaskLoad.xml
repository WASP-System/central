<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
    default-autowire="byName">

  <bean id="sampleQCTask" class="edu.yu.einstein.wasp.load.TaskMappingLoader">
    
    <property name="area" value="sampleQCTask" />
    
    <property name="uiFieldsFromWrapper">
      <list>
        <bean id="sampleQCTaskUiField" class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper">
        	<property name="baseLocale" value="en_US" />
    		<property name="baseName" value="description" />
        	<property name="label" value="Sample QC" />
        </bean>
      </list>
    </property>
    
    <property name="taskMapping">
      <list>
        <bean class="edu.yu.einstein.wasp.model.TaskMapping">
          <property name="stepName" value="sampleQC" />
          <property name="status" value="STARTED" />
          <property name="listMap" value="/sample/pendingqc/list.do" />
          <property name="permission" value="hasRole('su') or hasRole('fm') or hasRole('ft')" />
        </bean>
      </list>
    </property>

  </bean>
</beans>




