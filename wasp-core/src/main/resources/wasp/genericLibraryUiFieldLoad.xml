<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
    default-autowire="byName">

  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="genericLibraryUiField">
  	<property name="baseLocale" value="en_US" />
    <property name="baseArea" value="genericLibrary" />
  </bean> 

  <bean id="genericLibraryUiFields" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list value-type="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper">   
      	
      	<bean parent="genericLibraryUiField">
          <property name="baseName" value="concentration" />
          <property name="label" value="Concentration" />
          <property name="metaposition" value="10" />
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must provide a concentration" />
          <property name="type" value="NUMBER" />
        </bean>
        
        <bean parent="genericLibraryUiField">
          <property name="baseName" value="volume" />
          <property name="label" value="Volume" />
          <property name="metaposition" value="20" />
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must provide a volume" />
       	  <property name="type" value="NUMBER" />
        </bean>

        <bean parent="genericLibraryUiField">
          <property name="baseName" value="buffer" />
          <property name="label" value="Buffer" />
          <property name="metaposition" value="30" />
          <property name="control" value="select:TE:TE;Water:Water" />
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must select a buffer type" />
        </bean>
      
        <bean parent="genericLibraryUiField">
          <property name="baseName" value="adaptorset" />
          <property name="label" value="Adaptor Set" />
          <property name="metaposition" value="40" />
          <property name="control" value="select:#{dollar}{adaptorsets}:adaptorsetId:name" />
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must choose an adaptor set" />
        </bean>
        
        <bean parent="genericLibraryUiField">
          <property name="baseName" value="adaptor" />
          <property name="label" value="Adaptor" />
          <property name="metaposition" value="50" />
          <property name="control" value="select:#{dollar}{adaptors}:adaptorId:name" />
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must choose an adaptor" />
        </bean>
        
        <bean parent="genericLibraryUiField">
          <property name="baseName" value="size" />
          <property name="label" value="Library Size" />
          <property name="metaposition" value="60" />
          <property name="type" value="NUMBER" />
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must specify the library size" />
        </bean>
        
        <bean parent="genericLibraryUiField">
          <property name="baseName" value="sizeSd" />
          <property name="label" value="Library Size SD" />
          <property name="metaposition" value="70" />
          <property name="type" value="NUMBER" />
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must specify the library size standard deviation" />
        </bean>
      </list>
    </property>
  </bean>
</beans>
 