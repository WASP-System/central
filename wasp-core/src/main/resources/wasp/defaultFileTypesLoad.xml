<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-autowire="byName"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="csvFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="Comma Seperated Values" />
	    <property name="area" value="csv" />
	    <property name="description" value="Comma delimited data format." />
	    <property name="extensions" value="csv" />
  	</bean>
  	
  	<bean id="textFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="Plain Text" />
	    <property name="area" value="txt" />
	    <property name="description" value="Text format." />
	    <property name="extensions" value="txt" />
  	</bean>
  	
  	<bean id="htmlFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="HTML Page" />
	    <property name="area" value="html" />
	    <property name="description" value="Html format." />
	    <property name="extensions" value="html,htm" />
  	</bean>

  	<bean id="pdfFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="PDF Doc" />
	    <property name="area" value="pdf" />
	    <property name="description" value="Portable Document Format." />
	    <property name="extensions" value="pdf" />
  	</bean>


</beans>

