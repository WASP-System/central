<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-autowire="byName"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="csvFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="Comma Seperated Values" />
	    <property name="area" value="csv" />
	    <property name="description" value="Comma delimited data format." />
	    <property name="extensions" value="csv" />
  	</bean>
  	
  	<bean id="tsvFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="Tab Seperated Values" />
	    <property name="area" value="tsv" />
	    <property name="description" value="Tab delimited data format." />
	    <property name="extensions" value="tsv,tab" />
  	</bean>
  	
  	<bean id="textFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="Plain Text" />
	    <property name="area" value="txt" />
	    <property name="description" value="Text format." />
	    <property name="extensions" value="txt" />
  	</bean>
  	
  	<bean id="htmlFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="HTML Page" />
	    <property name="area" value="html" />
	    <property name="description" value="Html format." />
	    <property name="extensions" value="html,htm" />
  	</bean>

  	<bean id="pdfFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="PDF Doc" />
	    <property name="area" value="pdf" />
	    <property name="description" value="Portable Document Format." />
	    <property name="extensions" value="pdf" />
  	</bean>

  	<bean id="gifFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="GIF Image" />
	    <property name="area" value="gif" />
	    <property name="description" value="GIF Image Format." />
	    <property name="extensions" value="gif" />
  	</bean>

  	<bean id="bmpFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="BMP Image" />
	    <property name="area" value="bmp" />
	    <property name="description" value="BitMap Image Format." />
	    <property name="extensions" value="bmp" />
  	</bean>

  	<bean id="jpgFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="JPEG Image" />
	    <property name="area" value="jpg" />
	    <property name="description" value="JPEG Image Format." />
	    <property name="extensions" value="jpg,jpeg" />
  	</bean>

  	<bean id="pngFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="PNG Image" />
	    <property name="area" value="png" />
	    <property name="description" value="PNG Image Format." />
	    <property name="extensions" value="png" />
  	</bean>

  	<bean id="tifFileType" class="edu.yu.einstein.wasp.load.FileTypeLoaderAndFactory" >
	    <property name="name" value="TIFF Image" />
	    <property name="area" value="tif" />
	    <property name="description" value="TIFF Image Format." />
	    <property name="extensions" value="tif,tiff" />
  	</bean>

</beans>

