<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-autowire="byName"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
   
  <bean id="librarySampleType" class="edu.yu.einstein.wasp.load.SampleTypeLoaderAndFactory">
    <property name="name" value="Library" />
    <property name="area" value="library" />
    <property name="sampleTypeCategory" ref="biomaterialSampleTypeCategory" />
  </bean>
  
   <bean id="cellSampleType" class="edu.yu.einstein.wasp.load.SampleTypeLoaderAndFactory">
    <property name="name" value="Cell" />
    <property name="area" value="cell" />
    <property name="sampleTypeCategory" ref="hardwareSampleTypeCategory" />
  </bean>
  
  <bean id="puSampleType" class="edu.yu.einstein.wasp.load.SampleTypeLoaderAndFactory">
    <property name="name" value="Platform Unit" />
    <property name="area" value="platformunit" />
    <property name="sampleTypeCategory" ref="hardwareSampleTypeCategory" />
  </bean>
  
  <bean id="tissue" class="edu.yu.einstein.wasp.load.SampleTypeLoaderAndFactory">
    <property name="name" value="Tissue" />
    <property name="area" value="tissue" />
    <property name="sampleTypeCategory" ref="biomaterialSampleTypeCategory" />
  </bean>
  
  <bean id="facilityLibrary" class="edu.yu.einstein.wasp.load.SampleTypeLoaderAndFactory">
    <property name="name" value="Facility library" />
    <property name="area" value="facilityLibrary" />
    <property name="sampleTypeCategory" ref="biomaterialSampleTypeCategory" />
  </bean>
  
  <bean id="virtualLibrary" class="edu.yu.einstein.wasp.load.SampleTypeLoaderAndFactory">
    <property name="name" value="virtual library" />
    <property name="area" value="virtualLibrary" />
    <property name="sampleTypeCategory" ref="biomaterialSampleTypeCategory" />
  </bean>
 
</beans>

