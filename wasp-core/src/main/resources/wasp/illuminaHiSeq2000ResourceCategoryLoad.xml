<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
  <bean id="illuminaHiSeq2000Area" class="java.lang.String">
  	<constructor-arg><value>illuminaHiSeq2000</value></constructor-arg>
  </bean>

  <bean class="edu.yu.einstein.wasp.load.UiFieldFamilyWrapper" id="illuminaUiFieldWrapper">
    <property name="baseLocale" value="en_US" />
    <property name="baseArea" value="#{illuminaHiSeq2000Area}" />
  </bean>

  <bean id="illuminaHiSeq2000" class="edu.yu.einstein.wasp.load.ResourceCategoryLoadService">
    <property name="name" value="Illumina HiSeq 2000" />
    <property name="area" value="#{illuminaHiSeq2000Area}" />
    <property name="resourceType" value="mps" />
	 <property name="metaFromWrapper">
       <bean class="edu.yu.einstein.wasp.load.MetaLoadWrapper">
         <property name="area" value="resource" />
         <property name="metaList">
         	<list>
         		<value>allowableUiField.readlength=50:50;75:75;100:100;150:150</value>
         		<value>allowableUiField.readType=single:single;paired:paired</value>
         	</list>
         </property>
       </bean>
    </property> 

    <property name="uiFieldsFromWrapper">
      <list>
        <bean parent="illuminaUiFieldWrapper">
          <property name="baseName" value="readLength" />
          <property name="metaposition" value="10" />
          <property name="label" value="Read Length" />
          <property name="control" value="select:#{dollar}{resourceOptions.get(readlength)}:value:label" /> 
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must choose a read length" />
        </bean>

        <bean parent="illuminaUiFieldWrapper">
          <property name="baseName" value="readType" />
          <property name="metaposition" value="20" />
          <property name="label" value="Read Type" />
          <property name="control" value="select:#{dollar}{resourceOptions.get(readType)}:value:label" /> 
          <property name="constraint" value="NotEmpty" />
          <property name="error" value="You must choose a read type" />
        </bean>
      </list>
    </property>
  </bean>

</beans>
