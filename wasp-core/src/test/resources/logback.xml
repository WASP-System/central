<configuration debug="true">
<!-- Errors were reported during translation. -->
<!-- No class found for appender stdout -->
<!-- Could not find transformer for null -->
<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
<encoder>
<pattern>%le %-1r [%c{1}] %m%n</pattern>
</encoder>
</appender>
<logger name="edu.yu.einstein.wasp" level="DEBUG"/>
<logger name="org.hibernate" level="DEBUG"/>
<logger name="org.hsqldb" level="DEBUG"/>
<logger name="org.springframework.jdbc" level="DEBUG"/>
<logger name="org.apache.commons.dbcp" level="DEBUG"/>
<root level="INFO">
<appender-ref ref="stdout"/>
</root>
</configuration>
