<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">

  <bean class="edu.yu.einstein.wasp.model.UiField" id="illuminiaUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="illuminaHiSeq2000" />
  </bean>

  <bean id="illuminiaHiSeq2000" class="edu.yu.einstein.wasp.load.ResourceLoadService">
    <property name="iname" value="illuminaHiSeq2000" />
    <property name="name" value="Illumina HiSeq 2000" />
    <property name="resourceType" value="mps" />
    <property name="platform" value="Illumina" />

    <property name="cell">
      <list>
        <bean class="edu.yu.einstein.wasp.model.ResourceLane">
          <property name="iName" value="lane1" />
          <property name="name" value="lane 1"  />
        </bean>
       <bean class="edu.yu.einstein.wasp.model.ResourceLane">
          <property name="iName" value="lane2" />
          <property name="name" value="lane 2"  />
        </bean>
        <bean class="edu.yu.einstein.wasp.model.ResourceLane">
          <property name="iName" value="lane3" />
          <property name="name" value="lane 3"  />
        </bean>
        <bean class="edu.yu.einstein.wasp.model.ResourceLane">
          <property name="iName" value="lane4" />
          <property name="name" value="lane 4"  />
        </bean>
        <bean class="edu.yu.einstein.wasp.model.ResourceLane">
          <property name="iName" value="lane5" />
          <property name="name" value="lane 5"  />
        </bean>
        <bean class="edu.yu.einstein.wasp.model.ResourceLane">
          <property name="iName" value="lane6" />
          <property name="name" value="lane 6"  />
        </bean>
        <bean class="edu.yu.einstein.wasp.model.ResourceLane">
          <property name="iName" value="lane7" />
          <property name="name" value="lane 7"  />
        </bean>
        <bean class="edu.yu.einstein.wasp.model.ResourceLane">
          <property name="iName" value="lane8" />
          <property name="name" value="lane 8"  />
        </bean>
      </list>
    </property> 

    <property name="meta">
      <list>
        <bean class="edu.yu.einstein.wasp.model.ResourceMeta">
          <property name="k" value="resource.allowableUiField.readlength" />
          <property name="v" value="50;75;100;150" />
        </bean>

        <bean class="edu.yu.einstein.wasp.model.ResourceMeta">
          <property name="k" value="resource.allowableUiField.readType" />
          <property name="v" value="single;paired" />
        </bean>
      </list>

    </property> 

    <property name="uiFields">
      <list>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="metaposition" />
          <property name="attrValue" value="10" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Read Length" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="control" />
          <property name="attrValue" value="select:100:100;150:150;" />
<!--          <property name="attrValue" value="select:{workflowAssayAllowable.readlength}" /> -->
        </bean>

        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="metaposition" />
          <property name="attrValue" value="20" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Read Type" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="control" />
          <property name="attrValue" value="select:single:single;paired:paried;" />
<!--          <property name="attrValue" value="select:{workflowAssayAllowable.readType}" /> -->
        </bean>
      </list>
    </property>
  </bean>

</beans>
