<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
    default-autowire="byName">
   
  <!-- ChIP-seq DNA sample --> 
   
  <bean class="edu.yu.einstein.wasp.model.UiField" id="chipSeqDnaSampleUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="chipseqDnaSample" />
  </bean>

  
  <bean id="chipSeqDnaSpecificUiFields" class="java.util.ArrayList">
  	<constructor-arg>
	  	<list>
	        <!-- chipSeq Specific -->
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSize" />
	          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
	          <property name="attrValue" value="Average Fragmentation Size" />
	        </bean>
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSize" />
	          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
	          <property name="attrValue" value="100" />
	        </bean>
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSize" />
	          <property name="attrName" value="#{waspUiFieldAttrname['constraint']}" />
	          <property name="attrValue" value="NotEmpty" />
	        </bean>
	         <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSize" />
	          <property name="attrName" value="#{waspUiFieldAttrname['error']}" />
	          <property name="attrValue" value="You must provide a constraint" />
	        </bean>
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSize" />
	          <property name="attrName" value="#{waspUiFieldAttrname['type']}" />
	          <property name="attrValue" value="NUMBER" />
	        </bean>
	        
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSizeSD" />
	          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
	          <property name="attrValue" value="Fragmentation Size Std. Dev." />
	        </bean>
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSizeSD" />
	          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
	          <property name="attrValue" value="110" />
	        </bean>
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSizeSD" />
	          <property name="attrName" value="#{waspUiFieldAttrname['constraint']}" />
	          <property name="attrValue" value="NotEmpty" />
	        </bean>
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSizeSD" />
	          <property name="attrName" value="#{waspUiFieldAttrname['type']}" />
	          <property name="attrValue" value="NUMBER" />
	        </bean>
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="fragmentSizeSD" />
	          <property name="attrName" value="#{waspUiFieldAttrname['error']}" />
	          <property name="attrValue" value="You must provide a standard deviation" />
	        </bean>
	        
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="antibody" />
	          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
	          <property name="attrValue" value="Antibody" />
	        </bean>
	        <bean parent="chipSeqDnaSampleUiField">
	          <property name="name" value="antibody" />
	          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
	          <property name="attrValue" value="120" />
	        </bean>
	      </list>
      </constructor-arg>
  </bean>


  <bean id="chipSeqDnaSubtypeSampleResource" class="edu.yu.einstein.wasp.load.SubtypeSampleLoadService">
  	<property name="name" value="ChIP-seq DNA" />
    <property name="area" value="chipseqDnaSample" />
    <property name="sampleType" value="#{waspSampleType['dna']}" />
    <property name="baseUiFields" ref="genericDnaUiFields" />
    <property name="uiFields" ref="chipSeqDnaSpecificUiFields" />
  </bean>


  <!-- ChIPseq Library sample -->
  
  <bean class="edu.yu.einstein.wasp.model.UiField" id="chipSeqLibrarySampleUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="chipseqLibrarySample" />
  </bean>
  
 
  <bean id="chipSeqLibrarySubtypeSampleResource" class="edu.yu.einstein.wasp.load.SubtypeSampleLoadService">
  	<constructor-arg ref="chipSeqDnaSubtypeSampleResource" />
     <property name="name" value="ChIP-seq Library" />
    <property name="area" value="chipseqLibrarySample" />
    <property name="sampleType" value="#{waspSampleType['library']}" />
    <property name="baseUiFields" ref="genericLibraryUiFields" />
  </bean>
  
</beans>
