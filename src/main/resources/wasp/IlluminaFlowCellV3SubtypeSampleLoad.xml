<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
    default-autowire="byName">
   
  <bean id="illuminaFlowcellV3UiFieldArea" class="java.lang.String">
  	<constructor-arg><value>illuminaFlowcellV3</value></constructor-arg>
  </bean>
   
  <bean class="edu.yu.einstein.wasp.model.UiField" id="illuminaFlowcellV3UiField">
    <property name="locale" value="en_US" />
    <property name="area" value="#{illuminaFlowcellV3UiFieldArea}" />
  </bean>
  
   

  <bean id="illuminaFlowcellV3SampleLoad" class="edu.yu.einstein.wasp.load.SubtypeSampleLoadService">
  	<property name="name" value="Illumina Flow Cell Version 3" />
    <property name="area" value="#{illuminaFlowcellV3UiFieldArea}" />
    <property name="sampleType" value="#{waspSampleType['platformunit']}" />
    <property name="compatibleResourcesByIName">
  		<list>
  			<bean class="java.lang.String" depends-on="illuminaHiSeq2000">
  				<constructor-arg type="String" value="illuminaHiSeq2000" />
  			</bean>
  		</list>
  	</property>
  	
  	<property name="uiFields">
  		<list>
	  		<bean parent="illuminaFlowcellV3UiField">
	          <property name="name" value="#{waspPlatformUnit['cellName']}" />
	          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
	          <property name="attrValue" value="Lane" />
	        </bean>
	        <bean parent="illuminaFlowcellV3UiField">
	          <property name="name" value="#{waspPlatformUnit['platformUnitName']}" />
	          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
	          <property name="attrValue" value="Flow Cell" />
	        </bean>
        </list>
  	</property>
  	
  	<property name="meta">
      <list>
        <bean class="edu.yu.einstein.wasp.model.SubtypeSampleMeta">
          <property name="k" value="#{illuminaFlowcellV3UiFieldArea}.#{waspPlatformUnit['maxCellNumber']}" />
          <property name="v" value="8" />
        </bean>
       </list>
    </property> 
  	
  </bean>
  
</beans>
