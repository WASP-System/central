<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
    default-autowire="byName">

  <bean class="edu.yu.einstein.wasp.model.UiField" id="boneShakerApprovalUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="boneShakerApprovalTask" />
  </bean>

  <bean class="edu.yu.einstein.wasp.model.UiField" id="boneShakerUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="boneShakerTask" />
  </bean>

  <bean id="boneShakerApprovalTask" class="edu.yu.einstein.wasp.load.TaskLoadService">
    <property name="area" value="boneShakerApprovalTask" />
    <property name="name" value="Bone Shaker Approval" />
    <property name="uiFields">
      <list>
        <bean parent="boneShakerApprovalUiField">
          <property name="name" value="canWeShake" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="10" />
        </bean>
        <bean parent="boneShakerUiField">
          <property name="name" value="canWeShake" />
          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="Can We Shake?" />
        </bean>
      </list>
    </property>

  </bean>
  <bean id="boneShakerTask" class="edu.yu.einstein.wasp.load.TaskLoadService">
    <property name="area" value="boneShakerTask" />
    <property name="name" value="Bone Shaker Task" />
    <property name="uiFields">
      <list>
        <bean parent="boneShakerUiField">
          <property name="name" value="ricther" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="10" />
        </bean>
        <bean parent="boneShakerUiField">
          <property name="name" value="ricther" />
          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="Ricther Scale" />
        </bean>
      </list>
    </property>

  </bean>
</beans>
