<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
   <bean id="bowtieAlignerV0_12_7Area" class="java.lang.String">
  	<constructor-arg><value>bowtieAlignerV0_12_7</value></constructor-arg>
  </bean>

  <bean class="edu.yu.einstein.wasp.model.UiField" id="bowtieAlignerUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="#{bowtieAlignerV0_12_7Area}" />
  </bean>

  <bean id="bowtieAlignerSoftware" class="edu.yu.einstein.wasp.load.SoftwareLoadService">
    <property name="name" value="Bowtie Aligner" />
    <property name="area" value="#{bowtieAlignerV0_12_7Area}" />
    <property name="resourceType" value="aligner" />

    <property name="meta">
      <list>
        <bean class="edu.yu.einstein.wasp.model.SoftwareMeta">
          <property name="k" value="#{bowtieAlignerV0_12_7Area}.#{waspSoftware['version']}" />
          <property name="v" value="0.12.7" />
        </bean>
      </list>
    </property> 

    <property name="uiFields">
      <list>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="mismatches" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="10" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="mismatches" />
          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="Number of mismatches (0-3)" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="mismatches" />
          <property name="attrName" value="#{waspUiFieldAttrname['type']}" />
          <property name="attrValue" value="INTEGER" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="mismatches" />
          <property name="attrName" value="#{waspUiFieldAttrname['range']}" />
          <property name="attrValue" value="0:3" />
        </bean>
        
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="seedLength" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="20" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="seedLength" />
          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="Seed Length" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="seedLength" />
          <property name="attrName" value="#{waspUiFieldAttrname['type']}" />
          <property name="attrValue" value="NUMBER" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="seedLength" />
          <property name="attrName" value="#{waspUiFieldAttrname['range']}" />
          <property name="attrValue" value="5:1000" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="seedLength" />
          <property name="attrName" value="#{waspUiFieldAttrname['default']}" />
          <property name="attrValue" value="32" />
        </bean>
        
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="reportAlignmentNum" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="30" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="reportAlignmentNum" />
          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="Number of Alignments to Report" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="reportAlignmentNum" />
          <property name="attrName" value="#{waspUiFieldAttrname['type']}" />
          <property name="attrValue" value="INTEGER" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="reportAlignmentNum" />
          <property name="attrName" value="#{waspUiFieldAttrname['default']}" />
          <property name="attrValue" value="1" />
        </bean>
        
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="discardThreshold" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="40" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="discardThreshold" />
          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="Discard if more than how many alignments?" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="discardThreshold" />
          <property name="attrName" value="#{waspUiFieldAttrname['type']}" />
          <property name="attrValue" value="INTEGER" />
        </bean>
        
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="isBest" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="50" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="isBest" />
          <property name="attrName" value="#{waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="report only best alignments?" />
        </bean>
        <bean parent="bowtieAlignerUiField">
          <property name="name" value="isBest" />
          <property name="attrName" value="#{waspUiFieldAttrname['control']}" />
          <property name="attrValue" value="select:yes:yes;no;no" />
        </bean>     
      </list>
    </property>

  </bean> 

</beans>
