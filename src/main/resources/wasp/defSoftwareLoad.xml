<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">

  <bean class="edu.yu.einstein.wasp.model.UiField" id="defAlignerUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="defAligner" />
  </bean>

  <bean id="defAlignerResource" class="edu.yu.einstein.wasp.load.ResourceLoadService">
    <property name="iname" value="defAligner" />
    <property name="name" value="Def aligner a" />
    <property name="resourceCategory" value="software" />
    <property name="resourceType" value="aligner" />

    <property name="meta">
      <list>
        <bean class="edu.yu.einstein.wasp.model.ResourceMeta">
          <property name="k" value="aligner.bleh" />
          <property name="v" value="abc" />
        </bean>
        <bean class="edu.yu.einstein.wasp.model.ResourceMeta">
          <property name="k" value="aligner.aa" />
          <property name="v" value="def" />
        </bean>
        <bean class="edu.yu.einstein.wasp.model.ResourceMeta">
          <property name="k" value="aligner.didyouthink" />
          <property name="v" value="hudson" />
        </bean>
      </list>
    </property> 

    <property name="uiFields">
      <list>
        <bean parent="defAlignerUiField">
          <property name="name" value="xyz" />
          <property name="attrName" value="metaposition" />
          <property name="attrValue" value="10" />
        </bean>
        <bean parent="defAlignerUiField">
          <property name="name" value="xyz" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Xyz" />
        </bean>

        <bean parent="defAlignerUiField">
          <property name="name" value="quickbrownfox" />
          <property name="attrName" value="metaposition" />
          <property name="attrValue" value="20" />
        </bean>
        <bean parent="defAlignerUiField">
          <property name="name" value="quickbrownfox" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Quick Brown Fox" />
        </bean>
      </list>
    </property>

  </bean> 

</beans>
