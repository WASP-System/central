<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">

  <bean class="edu.yu.einstein.wasp.model.UiField" id="chipSeqUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="chipSeq" />
  </bean>

  <bean id="chipSeqWorkflow" class="edu.yu.einstein.wasp.load.WorkflowLoadService" depends-on="chipSeqDnaSampleUiField,chipSeqLibrarySampleUiField">
    <property name="iname" value="chipSeq" />
    <property name="name" value="Chip Seq" />
    <property name="pageFlowOrder">
      <list>
		<value>/jobsubmit/modifymeta/{n}</value>
		<value>/jobsubmit/resource/mps/{n}</value>
		<value>/jobsubmit/samples/{n}</value>
		<value>/jobsubmit/cells/{n}</value>
		<value>/jobsubmit/chipSeq/pair/{n}</value> 
		<value>/jobsubmit/software/aligner/{n}</value>
		<!-- <value>/jobsubmit/software/peakcaller/{n}</value> -->
		<value>/jobsubmit/verify/{n}</value>
		<value>/jobsubmit/submit/{n}</value>
		<value>/jobsubmit/ok</value>
      </list>
    </property>

    <property name="dependencies">
      <list>
        <value>mps</value>
        <value>aligner</value>
        <!-- <value>peakcaller</value> -->
      </list>
    </property>

    <property name="subtypeSamples">
      <set>
        <value>chipSeqDnaSample</value>
        <value>chipSeqLibrarySample</value>
      </set>
    </property>
    <property name="uiFields">
      <list>
        <bean parent="chipSeqUiField">
          <property name="name" value="workflow" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Chip Seq" />
        </bean>
        <bean parent="chipSeqUiField">
          <property name="name" value="jobsubmit/modifymeta" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Chip Seq Modify Meta PageTitle" />
        </bean>
        <bean parent="chipSeqUiField">
          <property name="name" value="jobsubmit/resource/mps" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Chip Seq MPS selector PageTitle" />
        </bean>
     </list>

    </property>
  </bean>

</beans>
