<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">
    
  <bean id="illuminaHiSeq2000Area" class="java.lang.String">
  	<constructor-arg><value>illuminaHiSeq2000</value></constructor-arg>
  </bean>

  <bean class="edu.yu.einstein.wasp.model.UiField" id="illuminiaUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="#{illuminaHiSeq2000Area}" />
  </bean>

  <bean id="illuminaHiSeq2000" class="edu.yu.einstein.wasp.load.ResourceCategoryLoadService">
    <property name="name" value="Illumina HiSeq 2000" />
    <property name="area" value="#{illuminaHiSeq2000Area}" />
    <property name="resourceType" value="mps" />

    <property name="meta">
      <list>
        <bean class="edu.yu.einstein.wasp.model.ResourceCategoryMeta">
          <property name="k" value="resource.allowableUiField.readlength" />
          <property name="v" value="50:50;75:75;100:100;150:150" />
        </bean>

        <bean class="edu.yu.einstein.wasp.model.ResourceCategoryMeta">
          <property name="k" value="resource.allowableUiField.readType" />
          <property name="v" value="single:single;paired:paired" />
        </bean>       
       </list>
    </property> 

    <property name="uiFields">
      <list>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="10" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="#waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="Read Length" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="#waspUiFieldAttrname['control']}" />
          <property name="attrValue" value="select:#{dollar}{resourceOptions.get(readlength)}:value:label" /> 
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="#waspUiFieldAttrname['constraint']}" />
          <property name="attrValue" value="NotEmpty" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="#waspUiFieldAttrname['error']}" />
          <property name="attrValue" value="You must choose a read length" />
        </bean>

        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="#{waspUiFieldAttrname['metaposition']}" />
          <property name="attrValue" value="20" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="#waspUiFieldAttrname['label']}" />
          <property name="attrValue" value="Read Type" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="#waspUiFieldAttrname['control']}" />
          <property name="attrValue" value="select:#{dollar}{resourceOptions.get(readType)}:value:label" /> 
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="#waspUiFieldAttrname['constraint']}" />
          <property name="attrValue" value="NotEmpty" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="#waspUiFieldAttrname['error']}" />
          <property name="attrValue" value="You must choose a read type" />
        </bean>
      </list>
    </property>
  </bean>

</beans>
