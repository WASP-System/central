<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd"
    default-autowire="byName">

  <!-- todo move this to web-app-context.xml and batch-context.xml -->
  <bean id="dollar" class="java.lang.String">
    <constructor-arg><value>$</value></constructor-arg>
  </bean>
  <bean id="pound" class="java.lang.String">
    <constructor-arg><value>#</value></constructor-arg>
  </bean>
  <!-- /todo move this to web-app-context.xml and batch-context.xml -->


  <bean class="edu.yu.einstein.wasp.model.UiField" id="illuminiaUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="illuminaHiSeq2000" />
  </bean>

  <bean id="illuminaHiSeq2000" class="edu.yu.einstein.wasp.load.ResourceCategoryLoadService">
    <property name="iname" value="illuminaHiSeq2000" />
    <property name="name" value="Illumina HiSeq 2000" />
    <property name="resourceType" value="mps" />

    <property name="meta">
      <list>
        <bean class="edu.yu.einstein.wasp.model.ResourceCategoryMeta">
          <property name="k" value="resource.allowableUiField.readlength" />
          <property name="v" value="50;75;100;150" />
        </bean>

        <bean class="edu.yu.einstein.wasp.model.ResourceCategoryMeta">
          <property name="k" value="resource.allowableUiField.readType" />
          <property name="v" value="single;paired" />
        </bean>
        
        <bean class="edu.yu.einstein.wasp.model.ResourceCategoryMeta">
          <property name="k" value="resource.cell.max" />
          <property name="v" value="8" />
        </bean>
      </list>
    </property> 

    <property name="uiFields">
      <list>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="metaposition" />
          <property name="attrValue" value="10" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Read Length" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readLength" />
          <property name="attrName" value="control" />
          <property name="attrValue" value="select:#{dollar}{resourceOptions.get(readlength)}:value:label" /> 
        </bean>

        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="metaposition" />
          <property name="attrValue" value="20" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="label" />
          <property name="attrValue" value="Read Type" />
        </bean>
        <bean parent="illuminiaUiField">
          <property name="name" value="readType" />
          <property name="attrName" value="control" />
          <property name="attrValue" value="select:#{dollar}{resourceOptions.get(readType)}:value:label" /> 
        </bean>
      </list>
    </property>
  </bean>

</beans>
