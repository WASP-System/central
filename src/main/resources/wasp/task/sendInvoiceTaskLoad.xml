<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
    default-autowire="byName">

  <bean class="edu.yu.einstein.wasp.model.UiField" id="sendInvoiceUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="boneShakerTask" />
  </bean>

  <bean id="sendInvoiceTask" class="edu.yu.einstein.wasp.load.TaskLoadService">

    <property name="iname" value="Send Invoice" />
    <property name="name" value="Send Invoice" />
    <property name="uiFields">
      <list>
        <bean parent="sendInvoiceUiField">
          <property name="name" value="tmpl" />
          <property name="attrName" value="tmpl" />
          <property name="attrValue" value="Tmpl" />
        </bean>
      </list>
    </property>

  </bean>
</beans>
