<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd"
    default-autowire="byName">

  <bean class="edu.yu.einstein.wasp.model.UiField" id="taskStartJobUiField">
    <property name="locale" value="en_US" />
    <property name="area" value="piApprovalTask" />
  </bean>

  <bean id="piApprovalTask" class="edu.yu.einstein.wasp.load.TaskLoadService">

    <property name="iname" value="PI Approval" />
    <property name="name" value="PI Approval" />
    <property name="uiFields">
      <list>
        <bean parent="taskStartJobUiField">
          <property name="name" value="tmpl" />
          <property name="attrName" value="tmpl" />
          <property name="attrValue" value="Tmpl" />
        </bean>
      </list>
    </property>

    <property name="taskMapping">
      <list>
        <bean class="edu.yu.einstein.wasp.model.TaskMapping">
          <property name="status" value="CREATED" />
          <property name="listMap" value="/lab/pendinglmapproval/list.do" />
          <property name="detailMap" value="/def.do" />
          <property name="permission" value="hasRole('su')" />
          <property name="dashboardSortOrder" value="1" />
        </bean>
      </list>
    </property>

  </bean>
</beans>
